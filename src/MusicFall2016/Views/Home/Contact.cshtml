@model MusicFall2016.Models.Album
@{
    ViewData["Title"] = "Create an album!";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div class="form">
    <form asp-action="createAlbum" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Title" class="col-sm-2 control-label">Album Title</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" autofocus />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-sm-2 control-label">Album Price</label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" autofocus />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Create Album</button>
            </div>
        </div>
    </form>
</div>